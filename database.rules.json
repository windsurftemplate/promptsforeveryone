{
  "rules": {
    ".read": true,
    "users": {
      "$uid": {
        ".write": "$uid === auth.uid",
        ".read": true
      }
    },
    "prompts": {
      ".write": "auth != null",
      ".read": true,
      "$promptId": {
        ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)"
      }
    },
    "howToStart": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('role').val() === 'admin'"
    }
  }
}
